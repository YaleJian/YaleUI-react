<?xml version='1.0' encoding='utf-8'?>
<widget id="com.yalejian.yaleui" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>扬歌YaleJian</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
<!--    <content src="index.html" />-->
    <content src="https://yalejian.com" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon.png" />
        <icon density="mdpi" src="res/icon.png" />
        <icon density="hdpi" src="res/icon.png" />
        <icon density="xhdpi" src="res/icon.png" />
        <icon density="xxhdpi" src="res/icon.png" />
        <icon density="xxxhdpi" src="res/icon.png" />
        <splash density="land-hdpi" src="res/bg.png" />
        <splash density="land-ldpi" src="res/bg.png" />
        <splash density="land-mdpi" src="res/bg.png" />
        <splash density="land-xhdpi" src="res/bg.png" />
        <splash density="port-hdpi" src="res/bg.png" />
        <splash density="port-ldpi" src="res/bg.png" />
        <splash density="port-mdpi" src="res/bg.png" />
        <splash density="port-xhdpi" src="res/bg.png" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="4500" />
        <preference name="FadeSplashScreenDuration" value="1000"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
